{
  "name": "navisai",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @navisai/pwa build && pnpm --filter @navisai/daemon dev",
    "dev:standalone-pwa": "pnpm --filter @navisai/pwa dev:standalone",
    "verify:arch": "node scripts/verify-architecture.mjs",
    "verify:npm-layout": "node scripts/verify-npm-layout.mjs",
    "dev:link": "node scripts/link-local-navisai.mjs link",
    "dev:unlink": "node scripts/link-local-navisai.mjs unlink",
    "verify": "pnpm verify:arch && pnpm verify:npm-layout && pnpm format:check && pnpm --filter @navisai/pwa check",
    "hooks:install": "node scripts/install-git-hooks.mjs install",
    "hooks:uninstall": "node scripts/install-git-hooks.mjs uninstall",
    "beads:setup": "bd setup claude --project",
    "beads:init": "bd init",
    "beads:prime": "bd prime",
    "beads:ready": "bd ready",
    "beads:status": "bd list --json",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18"
  },
  "dependencies": {
    "selfsigned": "^5.2.0"
  }
}
